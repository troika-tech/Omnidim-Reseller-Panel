# ============================================================
# OMNIDIMENSION FRONTEND - Environment Variables
# ============================================================
# Production-ready configuration with no hardcoded values
# ============================================================

# ============================================================
# API Configuration
# ============================================================
# Backend API base URL (without /api suffix)
# Examples:
#   Development: http://localhost:5000
#   Staging: https://staging-api.yourdomain.com
#   Production: https://api.yourdomain.com
VITE_API_BASE_URL=http://localhost:5000

# OMNIDIMENSION base URL for external links/references
# Examples:
#   https://app.omnidimension.com
VITE_OMNIDIMENSION_BASE_URL=https://app.omnidimension.com

# ============================================================
# Application Configuration
# ============================================================
# Application name for titles, headers, etc.
VITE_APP_NAME=OMNIDIMENSION Panel

# Application environment
# Values: development, staging, production
VITE_NODE_ENV=development

# ============================================================
# Feature Flags
# ============================================================
# Enable/disable sync with OMNIDIMENSION
# Set to 'true' to enable auto-sync, 'false' to disable
VITE_ENABLE_AUTO_SYNC=true

# Enable/disable file upload (PDF files)
# Set to 'true' to enable uploads, 'false' to disable
VITE_ENABLE_FILE_UPLOAD=true

# Maximum file size in MB (for PDF uploads)
VITE_MAX_FILE_SIZE_MB=10

# ============================================================
# Analytics & Tracking (Optional)
# ============================================================
# Google Analytics ID (optional, leave empty if not using)
VITE_GA_TRACKING_ID=

# ============================================================
# Display Configuration
# ============================================================
# Default theme: 'dark' or 'light'
VITE_DEFAULT_THEME=dark

# Items per page for pagination
VITE_ITEMS_PER_PAGE=10

# ============================================================
# Notification Settings
# ============================================================
# Enable toast notifications
VITE_ENABLE_NOTIFICATIONS=true

# Toast notification duration in milliseconds
VITE_TOAST_DURATION=3000

# ============================================================
# Security
# ============================================================
# Enable CSP (Content Security Policy) warnings in console
VITE_CSP_REPORT_ONLY=false

